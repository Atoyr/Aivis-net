{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "./src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/*.svg"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default", 
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Aivis.NET",
      "_appTitle": "Aivis.NET",
      "_appLogoPath": "docs/icon.svg", 
      "_appFaviconPath": "docs/icon.svg", 
      "_enableSearch": true,
      "pdf": false
    }
  }
}
